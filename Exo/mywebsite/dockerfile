FROM nginx
LABEL  version="0.1"
MAINTAINER toto
WORKDIR /usr/share/nginx/html/
# 1er . : o√π est dockerfile
# 2er . : /usr/share/nginx/html/
COPY . .
# on peut faire sans workdir "COPY ./usr/share/nginx/html/"
#RUN apk update && apk add nano
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]

