FROM node 

WORKDIR /app

ENV PORT=3002 

COPY package*.json ./

RUN npm install 

COPY . .

# chercher la porte dans app.js (Ã  la fin )
EXPOSE ${PORT}

CMD [ "node", "app.js" ]


